#!/bin/sh

desc="Radar client"
name="radar-client"
daemon="/usr/local/bin/${name}.py"
daemon_flags="-c /etc/radar/client/config/main.yml"
radar_client_pidfile="/var/run/${name}.pid"

. /etc/rc.d/rc.subr

rc_reload=NO

rc_start() {
    if [ ! -f $PIDFILE ]; then
        exec ${daemon} ${daemon_flags} &
    else
        echo "${desc} seems to be running. If that's not the case then remove : ${PIDFILE}."
    fi
}

rc_stop() {
    if [ -f $PIDFILE ]; then
        /bin/kill `/bin/cat ${radar_client_pidfile}`
        /bin/rm -f ${radar_client_pidfile}
    else
        echo "${desc} seems to be stopped."
    fi
}

rc_cmd $1
